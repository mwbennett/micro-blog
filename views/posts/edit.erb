<h1>Edit Post</h1> 
<form action="/posts/<%= @post.id %>" method="post">

  <input type="hidden" name="_method" value="put" />

  <label for="post_title">Title</label><br>
  <input class="post_title" type="text" name="post[title]" value="<%= @post.title %>" /><br>
    
  <label class="post_label" for="post_body">Body</label><br>
  <textarea class="post_body" type="text" name="post[body]"><%= @post.body %></textarea><br>

  <input type="submit" value="Edit Post" />

</form>